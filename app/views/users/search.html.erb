<h1>Search!</h1>

<div class="users-search">
  <label for="search-box">Type in here:</label>
  <input id="search-box"
    type="text"
    name="name-query"
    >
    
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= link_to user.username, user_url(user) %>
        <%= render "follows/form", user: user %>
      </li>
    <% end %>
  </ul>
  
</div>




